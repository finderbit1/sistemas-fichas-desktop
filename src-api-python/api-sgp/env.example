# Configuração do Banco de Dados
# Opções: sqlite, postgresql
DATABASE_TYPE=sqlite

# Configurações SQLite (usado quando DATABASE_TYPE=sqlite)
SQLITE_DATABASE_URL=sqlite:///db/banco.db

# Configurações PostgreSQL (usado quando DATABASE_TYPE=postgresql)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=sistema_fichas

# Configurações da API
API_V1_STR=
PROJECT_NAME=API Sistema de Fichas
VERSION=0.1.0

# Configurações de CORS
BACKEND_CORS_ORIGINS=["*"]

# Configurações de Segurança
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=11520
